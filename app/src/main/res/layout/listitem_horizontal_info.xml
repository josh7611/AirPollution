<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/siteAirCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.widget.TextView
            android:id="@+id/idTextView"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:gravity="center"
            android:textSize="16sp"
            tools:text="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"      />

        <android.widget.TextView
            android:id="@+id/siteNameTextView"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@+id/idTextView"
            app:layout_constraintStart_toEndOf="@+id/idTextView"
            tools:text="基隆" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pm25TextView"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/siteNameTextView"
            app:layout_constraintTop_toTopOf="@+id/idTextView"
            tools:text="4" />

        <android.widget.TextView
            android:id="@+id/countyNameTextView"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/idTextView"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="基隆市" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/statusTextView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/countyNameTextView"
            app:layout_constraintTop_toTopOf="@+id/countyNameTextView"
            tools:text="良好" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>